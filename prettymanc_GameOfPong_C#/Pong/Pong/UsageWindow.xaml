<Window x:Name="MainWindow" x:Class="Pong.UsageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UsageWindow" Background="#FF1F1E20" ResizeMode="NoResize" Width="350" Height="400" Icon="pongicon.ico">
    <Grid>
        <Label x:Name="lblUsageInfo" Content="Label" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0" Foreground="#FF2A55F1"/>
        <Button x:Name="btnOk" Content="Ok" HorizontalAlignment="Center" Width="75" Margin="0,0,0,10" Foreground="#FF2A55F1" Background="#FF363636" Click="btnOk_Click" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
